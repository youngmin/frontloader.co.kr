{
  "name": "frontloader-website",
  "version": "1.0.0",
  "description": "SPS ENG Farm Implement Manufacturer Website",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "npm run build:css && npm run build:js",
    "build:css": "postcss styles.css -o dist/styles.min.css --use autoprefixer cssnano",
    "build:js": "uglifyjs script.js -o dist/script.min.js -c -m",
    "serve": "live-server --port=3000 --host=localhost --open=index.html",
    "watch": "concurrently \"npm run watch:css\" \"npm run serve\"",
    "watch:css": "postcss styles.css -o styles.css --use autoprefixer --watch"
  },
  "keywords": [
    "farm-implement",
    "agriculture",
    "sps-eng",
    "front-loader",
    "backhoe"
  ],
  "author": "SPS ENG",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "cssnano": "^6.0.1",
    "live-server": "^1.2.2",
    "nodemon": "^3.0.1",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "uglify-js": "^3.17.4"
  },
  "dependencies": {
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "compression": "^1.7.4"
  }
}